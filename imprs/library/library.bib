file = {:home/marco/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Lynott et al. - 2020 - The Lancaster Sensorimotor Norms multidimensional measures of perceptual and action strength for 40,000 English w.pdf:pdf},
issn = {15543528},
journal = {Behavior Research Methods},
number = {3},
pages = {1271--1291},
pmid = {31832879},
publisher = {Behavior Research Methods},
title = {{The Lancaster Sensorimotor Norms: multidimensional measures of perceptual and action strength for 40,000 English words}},
