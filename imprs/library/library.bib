doi = {10.1152/jn.1984.51.4.705},
file = {:home/marco/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Abbs, Gracco - 1984 - Control of complex motor gestures orofacial muscle responses to load perturbations of lip during speech.pdf:pdf},
issn = {0022-3077},
