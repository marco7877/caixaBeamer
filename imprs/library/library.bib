issn = {15728676},
journal = {Phenomenology and the Cognitive Sciences},
keywords = {Auditory perception,Bodily skill,Dual-stream model,Enactivism,Motor resonance theory,Motor system,Sensorimotor theory},
number = {4},
pages = {619--651},
title = {{How passive is passive listening? Toward a sensorimotor theory of auditory perception}},
